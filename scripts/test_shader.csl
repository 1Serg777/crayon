ShaderProgram "Test Shader" {

    VertexInputLayout {
        vec4 pos : POSITION;
        vec2 uv : UV0;
    }

    ColorAttachments {
        vec4 col : COLOR0;
    }

    VertexShader {
        BEGIN
        layout (location = 0) out vec2 vertUv;
        void main() {
            vertUv = uv;
            gl_Position = pos;
        }
        END
    }
    FragmentShader {
        BEGIN
        layout (location = 0) in vec2 vertUv;
        void main() {
            col = vec4(0.5, 0.5, 0.5, 1.0);
        }
        END
    }

}